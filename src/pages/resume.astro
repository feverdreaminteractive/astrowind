    <div class="max-w-4xl mx-auto">

      <!-- Resume Header -->
      <div class="bg-white/70 dark:bg-primary-900/70 backdrop-blur-sm shadow-lg rounded-3xl border border-primary-200 dark:border-primary-700 p-8 mb-8">
