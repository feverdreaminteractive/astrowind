---
import { PROFILE_CONFIG } from '../consts';

interface Props {
  bio?: string;
}

const {
  bio = PROFILE_CONFIG.bio
} = Astro.props;
---

<section class="w-full max-w-2xl mb-12">
  <div class="bg-white/90 dark:bg-primary-900/90 backdrop-blur-sm rounded-2xl p-6 shadow-lg border border-primary-200/50 dark:border-primary-700/50">
    <div class="text-center">
      <p
        class="text-base text-gray-900 dark:text-primary-200 transition-colors duration-300 max-w-2xl mx-auto leading-relaxed"
        set:html={bio}
      />
    </div>
  </div>
</section>