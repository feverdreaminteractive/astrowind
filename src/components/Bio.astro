---
import { PROFILE_CONFIG } from '../consts';

interface Props {
  bio?: string;
}

const {
  bio = PROFILE_CONFIG.bio
} = Astro.props;
---

<section class="w-full max-w-2xl mb-12">
  <div class="text-center px-6">
    <p
      class="text-base text-primary-700 dark:text-primary-300 transition-colors duration-300 max-w-2xl mx-auto leading-relaxed"
      set:html={bio}
    />
  </div>
</section>