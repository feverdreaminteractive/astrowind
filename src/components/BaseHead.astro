---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import '../styles/global.css';
import { SITE_TITLE } from '../consts';

interface Props {
  title: string;
  description: string;
  image?: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const { title, description, image = '/og-image.png' } = Astro.props;
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="sitemap" href="/sitemap-index.xml" />
<meta name="generator" content={Astro.generator} />

<!-- Font preloads - use direct link tags to avoid build timeout -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Sora:wght@400;500;600;700&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

<!-- Font Awesome -->
<link rel="preconnect" href="https://cdnjs.cloudflare.com">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(image, Astro.url)} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:image:alt" content="Ryan Clayton - AI-Powered Portfolio" />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={new URL(image, Astro.url)} />

<!-- LinkedIn -->
<meta property="og:site_name" content="Ryan Clayton Portfolio" />
<meta name="author" content="Ryan Clayton" />
<meta name="robots" content="index, follow" />

<!-- Google Analytics with Enhanced Company Tracking -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-V9V10NNF3Y"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  // Check if this is the site owner (you) and skip tracking
  function isOwnerTraffic() {
    // Skip tracking if in development mode
    if (window.location.hostname === 'localhost' || window.location.hostname.includes('127.0.0.1')) {
      return true;
    }

    // Skip tracking if coming from specific admin paths or parameters
    const urlParams = new URLSearchParams(window.location.search);
    if (urlParams.has('admin') || urlParams.has('preview')) {
      return true;
    }

    // You can add your IP detection here if needed
    // Or set a localStorage flag when you're testing
    return localStorage.getItem('skip_analytics') === 'true';
  }

  // Enhanced company visitor tracking
  async function setupCompanyTracking() {
    // Skip all tracking for owner traffic
    if (isOwnerTraffic()) {
      console.log('Analytics disabled for site owner');
      return;
    }

    try {
      // Get basic visitor info
      const visitorData = {
        timeZone: Intl.DateTimeFormat().resolvedOptions().timeZone,
        language: navigator.language,
        screenResolution: `${screen.width}x${screen.height}`,
        referrer: document.referrer,
        userAgent: navigator.userAgent
      };

      // Try to get company info from your existing IPinfo integration
      const response = await fetch('/.netlify/functions/claude', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ message: '__GET_VISITOR_INFO__', browserData: visitorData })
      });

      if (response.ok) {
        const data = await response.json();

        // Set custom dimensions for company tracking
        gtag('config', 'G-V9V10NNF3Y', {
          custom_map: {
            'custom_parameter_1': 'company_name',
            'custom_parameter_2': 'visitor_type',
            'custom_parameter_3': 'company_location',
            'custom_parameter_4': 'recruitment_signals',
            'custom_parameter_5': 'referrer_source'
          }
        });

        // Track company visit event
        if (data.companyInfo) {
          gtag('event', 'company_visitor', {
            event_category: 'recruitment',
            company_name: data.companyInfo.company || 'Unknown',
            visitor_type: data.companyInfo.isLikelyRecruiter ? 'recruiter' : 'employee',
            company_location: data.companyInfo.location || 'Unknown',
            recruitment_signals: data.companyInfo.signals?.join(',') || 'none',
            referrer_source: data.companyInfo.referrerType || 'direct'
          });

          // Set user properties for segmentation
          gtag('set', {
            user_properties: {
              visitor_company: data.companyInfo.company || 'Unknown',
              is_recruiter: data.companyInfo.isLikelyRecruiter ? 'yes' : 'no',
              recruitment_score: data.companyInfo.score || 0
            }
          });
        }
      }
    } catch (error) {
      console.log('Company tracking setup failed:', error);
    }
  }

  // Initialize GA4 with enhanced tracking (only for non-owner traffic)
  if (!isOwnerTraffic()) {
    gtag('config', 'G-V9V10NNF3Y', {
      // Enable enhanced measurement
      enhanced_measurement: true,
      // Track file downloads, outbound clicks, site search, video engagement
      file_downloads: true,
      outbound_clicks: true,
      page_changes: true
    });
  } else {
    console.log('GA4 tracking disabled for site owner');
  }

  // Set up company tracking after page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', setupCompanyTracking);
  } else {
    setupCompanyTracking();
  }
</script>
